<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_1"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_2"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_3"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_4"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_5"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_6"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_7"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_8"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_9"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/_0"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:backgroundTint="@color/teal_200"
            android:text="@string/clear"
            android:textColor="@color/black"
            app:layout_columnSpan="2" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        android:text="@string/p"
        android:textSize="@dimen/textsizenumber"
        app:layout_constraintBaseline_toBaselineOf="@+id/price_txt"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="92dp"
        android:layout_height="222dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="76dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/dolar_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/_20"
            android:textSize="@dimen/textsizenumber" />

        <TextView
            android:id="@+id/dolar_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/_10"
            android:textSize="@dimen/textsizenumber" />

        <TextView
            android:id="@+id/dolar_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/_5dolar"
            android:textSize="@dimen/textsizenumber" />

        <TextView
            android:id="@+id/dolar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/_1dolar"
            android:textSize="@dimen/textsizenumber" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="92dp"
        android:layout_height="222dp"
        android:layout_marginEnd="52dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridLayout"
        app:layout_constraintEnd_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="@+id/gridLayout">

        <TextView
            android:id="@+id/cen_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/_25c"
            android:textSize="@dimen/textsizenumber" />

        <TextView
            android:id="@+id/cen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/_10c"
            android:textSize="@dimen/textsizenumber" />

        <TextView
            android:id="@+id/cen_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/_1c"
            android:textSize="@dimen/textsizenumber" />

        <TextView
            android:id="@+id/cen_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/_5c"
            android:textSize="@dimen/textsizenumber" />

    </LinearLayout>

    <TextView
        android:id="@+id/price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/price"
        android:textSize="@dimen/textsizenumber"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/price"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="@+id/linearLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>
